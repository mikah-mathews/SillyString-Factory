@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>;

<h2>Engineer Registry</h2>

@if (Model.Count == 0)
{
  <h3>No engineers have been added to the registry</h3>
}

<div class="margin">
  <ul>
    @foreach (Engineer engineer in Model)
    {
      <li>@Html.ActionLink($"{engineer.FullName}", "Details", new { id = engineer.EngineerId})</li>
    }
  </ul>
</div>