@{
  Layout = "_Layout";
}

@using Factory.Models
@model List<Factory.Models.Machine>;

<h2>Machines:</h2>

<div class="margin">
  @if (@Model.Count == 0)
  {
    <h3>No machines have been added to the registry</h3>
  }
  <ul>
    @foreach (Machine machine in Model)
    {
      <li>@Html.ActionLink($"{machine.ModelName}", "Details", new { id = machine.MachineId})</li>
    }
  </ul>
</div>

<p>@Html.ActionLink("Add new machine", "Create")</p>