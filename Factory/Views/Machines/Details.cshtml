@{
  Layout = "_Layout";
}

@model Factory.Models.Machine;

<h2>Machine Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.ModelName): @Html.DisplayFor(model => model.ModelName)</h3>
<h3>@Html.DisplayNameFor(model => model.ModelNumber): @Html.DisplayFor(model => model.ModelNumber)</h3>
<h3>@Html.DisplayNameFor(model => model.MaintenanceStatus): @Html.DisplayFor(model => model.MaintenanceStatus)</h3>

<div class="margin">
  @if(Model.JoinEntities.Count == 0)
  {
    <h3>No engineers have been assigned to this machine.</h3>
  }
  else
  {
    <h3>The following engineers are assigned to this machine:</h3>
    <ul>
    @foreach(var join in Model.JoinEntities)
    {
      <li>@join.Engineer.FullName</li>
    }
    </ul>
  }
</div>

<div class="margin">
  <p>@Html.ActionLink("Edit Machine", "Edit", new { id = Model.MachineId })</p>
  <p>@Html.ActionLink("Delete Machine", "Delete", new { id = Model.MachineId})</p>
</div>